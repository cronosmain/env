{
  "name": "@cronosmain/env",
  "type": "module",
  "version": "1.0.0",
  "description": "Gets the environment variable or terminates the program execution.",
  "author": "Mark https://t.me/cronosmain",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/cronosmain/env.git"
  },
